# Application
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL="postgresql://agentcare:agentcare_dev_password@localhost:5433/agentcare"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT - IMPORTANT: Generate a strong secret for production (min 32 chars)
# Use: openssl rand -base64 32
JWT_SECRET="dev-secret-change-me-in-production-min-32-chars"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Internal API Key for service-to-service communication
# Use: openssl rand -hex 32
INTERNAL_API_KEY="dev-internal-api-key-change-in-production"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:3002"

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH="./uploads"

# Email (optional for MVP)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM=""

# SMS (optional for MVP)
SMS_PROVIDER=""
SMS_API_KEY=""

# AI Service
AI_SERVICE_URL="http://localhost:8000"

# Logging
LOG_LEVEL="debug"
